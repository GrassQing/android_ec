<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_buttom_cart">



        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="忘记密码"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_link_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="{fa-chevron-left}"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/login_by_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_main"
                    android:text="{fa-mobile-phone}"
                    android:textSize="25sp" />
            <!--手机号码-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@null">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_sign_forget_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入注册手机号"
                    android:inputType="phone"
                    tools:ignore="HardcodedText"
                    android:background="@null" />
            </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_sign_forget_sms"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_buttom"
                    android:gravity="center"
                    android:text="发送验证码"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <com.joanzapata.iconify.widget.IconTextView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_main"
                    android:text="{fa-lock}"
                    android:textSize="25sp" />
            <!--输入验证码-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@null">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_sign_forget_vcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入验证码"
                    android:inputType="textPassword"
                    tools:ignore="HardcodedText"
                    android:background="@null" />
            </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            </RelativeLayout>



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_sign_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_buttom"
                android:gravity="center"
                android:padding="12dp"
                android:text="确认"
                tools:ignore="HardcodedText" />



        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.LinearLayoutCompat>